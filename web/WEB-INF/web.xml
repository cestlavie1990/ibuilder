<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>controller.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObjectsServlet</servlet-name>
        <servlet-class>controller.ObjectsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlacesServlet</servlet-name>
        <servlet-class>controller.PlacesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WorksServlet</servlet-name>
        <servlet-class>controller.WorksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TypesServlet</servlet-name>
        <servlet-class>controller.TypesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationFinishedServlet</servlet-name>
        <servlet-class>controller.RegistrationFinishedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObjectsServlet</servlet-name>
        <url-pattern>/objects</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlacesServlet</servlet-name>
        <url-pattern>/places</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WorksServlet</servlet-name>
        <url-pattern>/works</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TypesServlet</servlet-name>
        <url-pattern>/types</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationFinishedServlet</servlet-name>
        <url-pattern>/registration_finished</url-pattern>
    </servlet-mapping>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>JDBCRealmIbuilder</realm-name>
        <form-login-config>
            <form-login-page>/WEB-INF/views/private/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/views/private/error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    <security-constraint>
        <display-name>private_zone</display-name>
        <web-resource-collection>
            <web-resource-name>private pages</web-resource-name>
            <description/>
            <url-pattern>/private/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
